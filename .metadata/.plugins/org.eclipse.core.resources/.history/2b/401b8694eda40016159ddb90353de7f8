import xlrd
from xlutils.copy import copy
from cod_utf8 import cod_utf8
import sys
reload(sys)
sys.setdefaultencoding('utf-8')


def xl_red(row_num,xlfile=u"C:/test/更新日志.xls",ind=0):
    exl=xlrd.open_workbook(xlfile)
    ex_sheet=exl.sheet_by_index(ind)
    
    cell=ex_sheet.row_values(row_num+2)
    
    return cell 
def xl_write(row,col,changed=u"已更新",xlfile=u"C:/test/更新日志.xls",ind=0):
    exl=xlrd.open_workbook(xlfile,formatting_info=True)
    r_sheet=exl.sheet_by_index(ind)
    w_exl=copy(exl)
    w_sheet=w_exl.get_sheet(ind)
    w_sheet.write(row+1,col,changed)
    w_exl.save(xlfile)
    
    
if __name__=="__main__":
    textlist=xl_red(2)
    print textlist
    xl_write(5,5)