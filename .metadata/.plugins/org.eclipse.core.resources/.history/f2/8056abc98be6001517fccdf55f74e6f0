#!/usr/bin/python
#encoding:utf-8
import urllib
import os
def Schedule(a,b,c):
    '''''
    a:已经下载的数据块
    b:数据块的大小
    c:远程文件的大小
   '''
    per = 100.0 * a * b / c
    if per > 100 :
        per = 100
    print '%.2f%%' % per
url = 'http://pan.baidu.com/s/1dEp9iBR'
#local = url.split('/')[-1]
local = os.path.join('C:/test/','缺陷定义.docx')
urllib.urlretrieve(url,local,Schedule)